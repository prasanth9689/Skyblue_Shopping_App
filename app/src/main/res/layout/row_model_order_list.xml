<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/product_image_view"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:backgroundTint="@color/white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toEndOf="@id/product_image_view">
            <TextView
                android:id="@+id/home_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="VEVO V5"
                android:textSize="15sp"
                android:fontFamily="@font/open_sans_light"/>

            <TextView
                android:id="@+id/home_product_name_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey_dialog_box"
                android:text="Bluetooth Headset"
                android:textSize="10sp"
                android:fontFamily="@font/open_sans_light"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="15dp"
                    android:src="@drawable/rating_star"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:id="@+id/product_home_rating_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey_dialog_box"
                    android:text="4.8"
                    android:textSize="10sp"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/open_sans_light"/>
            </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/rupees_symbol"
                android:textColor="#000000"
                android:textSize="10sp"
                android:fontFamily="@font/open_sans_light"/>

            <TextView
                android:id="@+id/home_sale_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text=""
                android:textSize="10sp"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:fontFamily="@font/open_sans_light"/>
            <TextView
                android:id="@+id/discount_price_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey_dialog_box"
                android:text=""
                android:textSize="10sp"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/open_sans_light"/>
        </LinearLayout>

            <Button
                android:id="@+id/buy_now_btn_home"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="@string/view"
                android:textAllCaps="false"
                android:background="@color/teal_700"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/open_sans_light"/>
        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>